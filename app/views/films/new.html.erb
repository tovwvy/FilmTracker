<%= form_with(model: @film, url: films_path, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label fw-bold" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :year, class: "form-label fw-bold" %>
    <%= form.number_field :year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :describtion, class: "form-label fw-bold" %>
    <%= form.text_area :describtion, class: "form-control", rows: 4 %>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= form.label :length, class: "form-label fw-bold" %>
      <%= form.number_field :length, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= form.label :rating, class: "form-label fw-bold" %>
      <%= form.number_field :rating, class: "form-control", step: "0.1" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :actor, class: "form-label fw-bold" %>
    <%= form.text_field :actor, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :director, class: "form-label fw-bold" %>
    <%= form.text_field :director, class: "form-control" %>
  </div>

  <%= form.submit "Create", class: "btn btn-secondary mt-4" %>
<% end %>